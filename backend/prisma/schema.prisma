generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model EventType {
  id       Int      @id @default(autoincrement())
  name     String
  slug     String   @unique
  duration Int
  bookings Booking[]
}

model Availability {
  id        Int    @id @default(autoincrement())
  weekday   Int
  startTime String
  endTime   String
  timezone  String
}

model Booking {
  id          Int      @id @default(autoincrement())
  eventTypeId Int
  name        String
  email       String
  startTime   DateTime
  endTime     DateTime
  status      String

  eventType EventType @relation(fields: [eventTypeId], references: [id])
}
